---
import Layout from '../../layouts/Layout.astro';
import BMICalculator from '../../components/react/BMICalculator.tsx';
---

<Layout title="BMI Calculator - WiseAdvisor Tools">
  <div class="bg-navy-900 text-white py-16">
    <div class="container mx-auto px-4 text-center">
      <h1 class="text-4xl font-serif font-bold mb-4">Health Tools</h1>
      <p class="text-gray-300">Monitor your health metrics with our simple tools.</p>
    </div>
  </div>

  <section class="py-16 bg-gray-50">
    <div class="container mx-auto px-4">
      <BMICalculator client:load />
    </div>
  </section>
</Layout>
