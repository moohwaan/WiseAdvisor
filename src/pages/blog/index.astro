---
import Layout from '../../layouts/Layout.astro';
import { client, urlFor } from '../../lib/sanity';

// Type definition for Article
interface Article {
  _id: string;
  title: string;
  slug: { current: string };
  mainImage: any;
  excerpt: string;
  publishedAt: string;
  categories: string[];
}

// Fetch all parentingContent articles sorted by date
const query = `*[_type == "parentingContent"] | order(publishedAt desc)`;
let articles: Article[] = [];
let error = false;

try {
  articles = await client.fetch(query);
} catch (e) {
  console.error("Sanity fetch error:", e);
  error = true;
}

// Mock data if empty/error
if (articles.length === 0) {
   articles = [
    {
      _id: '1',
      title: 'Planning for Your Child\'s Education Fund',
      slug: { current: 'education-fund-planning' },
      mainImage: null,
      excerpt: 'Start early to ensure your children have the resources they need for their future education.',
      publishedAt: new Date().toISOString(),
      categories: ['Education', 'Finance'],
    },
     {
      _id: '2',
      title: 'The Importance of Positive Parenting',
      slug: { current: 'positive-parenting' },
      mainImage: null,
      excerpt: 'How building a strong emotional bond with your child contributes to their long-term success.',
      publishedAt: new Date().toISOString(),
      categories: ['Parenting', 'Wellness'],
    },
     {
      _id: '3',
      title: 'Health Insurance for Growing Families',
      slug: { current: 'health-insurance-families' },
      mainImage: null,
      excerpt: 'Choosing the right coverage to protect your family from unexpected medical costs.',
      publishedAt: new Date().toISOString(),
      categories: ['Health', 'Insurance'],
    },
    {
      _id: '4',
      title: 'Understanding Compound Interest',
      slug: { current: 'compound-interest' },
      mainImage: null,
      excerpt: 'Why starting to save early makes a massive difference for your child\'s future.',
      publishedAt: new Date().toISOString(),
      categories: ['Finance'],
    },
  ];
}
---

<Layout title="Blog & Insights - WiseAdvisor">
  <div class="bg-navy-900 text-white py-16">
    <div class="container mx-auto px-4 sm:px-6 lg:px-8 text-center">
      <h1 class="text-4xl md:text-5xl font-serif font-bold mb-4">Insights & Advice</h1>
      <p class="text-xl text-gray-300 max-w-2xl mx-auto">
        Expert articles on parenting, education planning, health, and financial well-being.
      </p>
    </div>
  </div>

  <section class="py-16 bg-gray-50">
    <div class="container mx-auto px-4 sm:px-6 lg:px-8">
      <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8">
        {articles.map((article) => (
          <article class="bg-white rounded-xl overflow-hidden shadow-sm hover:shadow-md transition-all group border border-gray-100 flex flex-col">
             <div class="h-56 overflow-hidden bg-gray-200 relative">
              {article.mainImage ? (
                <img
                  src={urlFor(article.mainImage).width(800).height(600).url()}
                  alt={article.title}
                  class="w-full h-full object-cover transform group-hover:scale-105 transition-transform duration-500"
                />
              ) : (
                 <div class="w-full h-full flex items-center justify-center text-gray-400 bg-gray-100">
                  <span class="text-sm">No Image</span>
                </div>
              )}
               {article.categories && article.categories.length > 0 && (
                <div class="absolute top-4 left-4">
                  <span class="bg-white/90 backdrop-blur-sm text-navy-900 text-xs font-bold px-3 py-1 rounded-full uppercase tracking-wider">
                    {article.categories[0]}
                  </span>
                </div>
              )}
            </div>
            <div class="p-6 flex-grow flex flex-col">
               <div class="text-gray-500 text-xs mb-3">
                {new Date(article.publishedAt).toLocaleDateString('en-US', { year: 'numeric', month: 'long', day: 'numeric' })}
              </div>
              <h2 class="text-xl font-serif font-bold text-navy-900 mb-3 group-hover:text-royal-600 transition-colors">
                <a href={`/blog/${article.slug.current}`}>
                  {article.title}
                </a>
              </h2>
              <p class="text-gray-600 text-sm line-clamp-3 mb-4 flex-grow">
                {article.excerpt}
              </p>
              <a href={`/blog/${article.slug.current}`} class="text-royal-600 text-sm font-semibold hover:underline inline-flex items-center mt-auto">
                Read Article
              </a>
            </div>
          </article>
        ))}
      </div>
    </div>
  </section>
</Layout>
