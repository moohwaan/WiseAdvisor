---
const features = [
  {
    title: 'Family Protection',
    description: 'Comprehensive life, disability, and long-term care insurance solutions to safeguard your loved ones.',
    icon: 'shield',
    color: 'bg-blue-100 text-blue-600',
  },
  {
    title: 'Health & Wellness',
    description: 'Personalized health insurance plans and wellness resources for your family\'s well-being.',
    icon: 'heart',
    color: 'bg-green-100 text-green-600',
  },
  {
    title: 'Education Planning',
    description: 'Strategic savings and investment plans to fund your children\'s future education.',
    icon: 'academic',
    color: 'bg-purple-100 text-purple-600',
  },
];
---

<section id="services" class="py-20 bg-white">
  <div class="container mx-auto px-4 sm:px-6 lg:px-8">
    <div class="text-center max-w-3xl mx-auto mb-16">
      <h2 class="text-3xl md:text-4xl font-serif font-bold text-navy-900 mb-4">
        Comprehensive Solutions for Every Stage
      </h2>
      <p class="text-gray-600 text-lg">
        We provide expert guidance across all aspects of financial and physical well-being.
      </p>
    </div>

    <div class="grid grid-cols-1 md:grid-cols-3 gap-8">
      {features.map((feature) => (
        <div class="bg-gray-50 rounded-xl p-8 border border-gray-100 shadow-sm hover:shadow-md transition-shadow group">
          <div class={`w-14 h-14 rounded-full flex items-center justify-center mb-6 ${feature.color} group-hover:scale-110 transition-transform`}>
            {feature.icon === 'shield' && (
              <svg xmlns="http://www.w3.org/2000/svg" class="h-7 w-7" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m5.618-4.016A11.955 11.955 0 0112 2.944a11.955 11.955 0 01-8.618 3.04A12.02 12.02 0 003 9c0 5.591 3.824 10.29 9 11.622 5.176-1.332 9-6.03 9-11.622 0-1.042-.133-2.052-.382-3.016z" />
              </svg>
            )}
            {feature.icon === 'heart' && (
              <svg xmlns="http://www.w3.org/2000/svg" class="h-7 w-7" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4.318 6.318a4.5 4.5 0 000 6.364L12 20.364l7.682-7.682a4.5 4.5 0 00-6.364-6.364L12 7.636l-1.318-1.318a4.5 4.5 0 00-6.364 0z" />
              </svg>
            )}
            {feature.icon === 'academic' && (
              <svg xmlns="http://www.w3.org/2000/svg" class="h-7 w-7" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                <path d="M12 14l9-5-9-5-9 5 9 5z" />
                <path d="M12 14l6.16-3.422a12.083 12.083 0 01.665 6.479A11.952 11.952 0 0012 20.055a11.952 11.952 0 00-6.824-2.998 12.078 12.078 0 01.665-6.479L12 14z" />
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 14l9-5-9-5-9 5 9 5zm0 0l6.16-3.422a12.083 12.083 0 01.665 6.479A11.952 11.952 0 0012 20.055a11.952 11.952 0 00-6.824-2.998 12.078 12.078 0 01.665-6.479L12 14zm-4 6v-7.5l4-2.222" />
              </svg>
            )}
          </div>
          <h3 class="text-xl font-serif font-bold text-navy-900 mb-3">{feature.title}</h3>
          <p class="text-gray-600 leading-relaxed">
            {feature.description}
          </p>
        </div>
      ))}
    </div>
  </div>
</section>
