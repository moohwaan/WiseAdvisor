---
import { getLangFromUrl, useTranslations } from '../i18n/utils';
import LanguagePicker from './LanguagePicker.astro';

const lang = getLangFromUrl(Astro.url);
const t = useTranslations(lang);

const navItems = [
  { name: t('nav.services'), href: lang === 'th' ? '/#services' : `/${lang}/#services` },
  { name: t('nav.about'), href: lang === 'th' ? '/#about' : `/${lang}/#about` },
  { name: t('nav.insights'), href: lang === 'th' ? '/blog' : `/${lang}/blog` },
  { name: t('nav.contact'), href: lang === 'th' ? '/contact' : `/${lang}/contact` },
];
---

<header class="bg-navy-900 text-white sticky top-0 z-50 shadow-md">
  <div class="container mx-auto px-4 sm:px-6 lg:px-8">
    <div class="flex justify-between items-center h-16">
      <!-- Logo -->
      <div class="flex-shrink-0 flex items-center">
        <a href={lang === 'th' ? '/' : `/${lang}`} class="text-2xl font-serif font-bold text-white tracking-wide">
          WiseAdvisor
        </a>
      </div>

      <!-- Desktop Menu -->
      <div class="hidden md:block">
        <div class="ml-10 flex items-center space-x-6">
          {navItems.map((item) => (
            <a
              href={item.href}
              class="text-gray-300 hover:text-white px-3 py-2 rounded-md text-sm font-medium transition-colors"
            >
              {item.name}
            </a>
          ))}
          {/* 
          <a
            href="https://sanity.io"
            target="_blank"
            rel="noopener noreferrer"
            class="bg-royal-600 hover:bg-royal-700 text-white px-4 py-2 rounded-lg text-sm font-medium transition-colors shadow-sm"
          >
            {t('nav.clientPortal')}
          </a>
          */}
          <!-- Language Switcher -->
          <div class="ml-2">
            <LanguagePicker currentLang={lang} />
          </div>
        </div>
      </div>

      <!-- Mobile Menu Button (Hamburger) - To be interactive later -->
      <div class="-mr-2 flex md:hidden">
        <button type="button" class="inline-flex items-center justify-center p-2 rounded-md text-gray-400 hover:text-white hover:bg-navy-800 focus:outline-none ring-1 ring-white/10" aria-controls="mobile-menu" aria-expanded="false">
          <span class="sr-only">Open main menu</span>
          <svg class="block h-6 w-6" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke="currentColor" aria-hidden="true">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 12h16M4 18h16" />
          </svg>
        </button>
      </div>
    </div>
  </div>
</header>
